doctype html
html
  head
    title MovieApp
    link(rel="stylesheet", href="/style.css")
  body
    header
      section.tituloClaqueta
        img(src="/assets/claqueta.png", alt="claqueta")
        h1 MovieApp
      button.menu_button
        img(src="/assets/play.png", alt="play")
        include navBarAdmin.pug 
  main
    h2 Create Movie
    form#createMovie(action="" method="POST")
        fieldset 
            p Title 
            input( class="inputCreate" type="text" name="title" required)
        fieldset 
            p Date 
            input( class="inputCreate" type="text" name="date")
        fieldset 
            p Genre 
            input( class="inputCreate" type="text" name="genre")
        fieldset 
            p Poster 
            input( class="inputCreate" type="file" name="poster")
        fieldset 
            p Runtime
            input( class="inputCreate" type="text" name="runtime")
        fieldset 
            p Synopsis 
            textarea( class="inputCreate" rows="4" cols="50" name="synopsis")
        fieldset 
            p Director
            input( class="inputCreate" type="text" name= "director")
        fieldset 
            p Actors
            input( class="inputCreate" type="text" name="actors")
        fieldset 
            p Created by
            input( class="inputCreate" type="text" name="email")

        button#createButton(type="submit") Create
  script(src='/createMovie.js')
  include footer.pug

    